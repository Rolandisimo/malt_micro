{
  "include": [
    "src/**/*.ts",
    "bin/**/*"
  ],
  "exclude": [
    "node_modules"
  ],
  "compilerOptions": {
    "sourceMap": true,
    "mapRoot": "./",

    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": [
      "dom",
      "es2015",
      "es2016",
      "es2017",
      "es6"
    ],

    "outDir": "./dist",
    "charset": "UTF-8",

    "allowJs": true,
    "checkJs": false,

    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,

    "baseUrl": "./",
    "paths": {
      "@config/*": [ "./src/config/*" ],
      "@env": [ "./src/config/Environment" ],
      "@controllers": [ "./src/controllers" ],
      "@models": [ "./src/models" ],
      "@middlewares": [ "./src/middlewares" ],
      "@types": [ "./src/types" ]
    },

    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  }
}
